@PACKAGE_INIT@

# LongMen CMake configuration file

set(LONGMEN_VERSION @PROJECT_VERSION@)

# Include directory
set_and_check(LONGMEN_INCLUDE_DIR "@PACKAGE_LONGMEN_INSTALL_INCLUDEDIR@")

# Library directory
set_and_check(LONGMEN_LIBRARY_DIR "@PACKAGE_LONGMEN_INSTALL_LIBDIR@")

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/longmen-targets.cmake")

# Define imported targets
if(TARGET longmen::longmen_shared)
    set(LONGMEN_LIBRARIES longmen::longmen_shared)
elseif(TARGET longmen::longmen_static)
    set(LONGMEN_LIBRARIES longmen::longmen_static)
endif()

check_required_components(longmen)
